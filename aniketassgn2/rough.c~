#include <fstream>
#include <iostream>
#include <string>
#include <dirent.h>
#include <unistd.h>
#include <sys/stat.h>
#include <sys/types.h>
#include <errno.h>
#include <vector>
#include <bits/stdc++.h>
using namespace std;
	
#define DIR_path "home/btech/cs1130212/aniket/aniket"      
main()
 {
   DIR *dir;
   dir=opendir(DIR_PATH);
   printf("THe files inside the directory :: \n");

  struct dirent *dent;
  if(dir!=NULL)
   {

       while((dent=readdir(dir))!= NULL)
         {
          	  struct stat st;
		lstat(dent->d_name, &st);	
		if(S_ISDIR(st.st_mode))
  		 printf("\t DIRECTORY\n");
		else
   		 printf("\t FILE\n");
        }
           close(dir);
    }
    else
            printf("ERROR OPENIN DIRECTORY");

}
